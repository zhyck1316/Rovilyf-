                    span.ms-1.fas.fa-bug(class='item.icon' data-fa-transform="up-2" style="height:7.8px;width:7.8px;")

                .col-4.col-sm-3
                  h6.text-600.fw-bolder.lh-sm.mt-1 ATTACHMENTS  
                .col-8.col-sm-9
                  .border-bottom.d-flex.flex-row.pb-3
                    img(src=`${CWD}assets/img/kanban/a1.jpg`, width=64 height=64 alt="").rounded-3
                    .flex-1.ms-3.d-flex.flex-column
