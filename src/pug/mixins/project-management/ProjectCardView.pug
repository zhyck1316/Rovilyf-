mixin ProjectCard(config)
  .card.h-100.hover-actions-trigger
    .card-body
      .d-flex.align-items-center
        h4.mb-2.line-clamp-1.lh-sm.flex-1.me-5=config.title
        .hover-actions.top-0.end-0.mt-4.me-4
          button.btn.btn-primary.btn-icon.flex-shrink-0(data-bs-toggle='modal' data-bs-target='#projectsCardViewModal')
            span.fa-solid.fa-chevron-right
      span.badge.badge-phoenix.fs--2.mb-4(class=config.status.type)= config.status.label
      .d-flex.align-items-center.mb-2
        span.fa-solid.fa-user.me-2.text-700.fs--1.fw-extra-bold
        p.fw-bold.mb-0.text-truncate.lh-1 Client : 
          span.fw-semi-bold.text-primary.ms-1=config.client
      .d-flex.align-items-center.mb-4
        span.fa-solid.fa-credit-card.me-2.text-700.fs--1.fw-extra-bold
        p.fw-bold.mb-0.lh-1 Budget : 
          span.ms-1.text-1100=config.budget
      .d-flex.justify-content-between.text-700.fw-semi-bold
        p.mb-2  Progress
        p.mb-2.text-1100=config.progress
      .progress(class=`${config.progressbarBgColor}`)
        .progress-bar.rounded(role='progressbar' aria-label='Success example' style=`width: ${config.progress}`	aria-valuenow='25' aria-valuemin='0' aria-valuemax='100' class=`${config.progressBarBg}`)

      .d-flex.align-items-center.mt-4
        p.mb-0.fw-bold.fs--1 Started :
          span.fw-semi-bold.text-600.ms-1= config.started
      .d-flex.align-items-center.mt-2
        p.mb-0.fw-bold.fs--1 Deadline : 
          span.fw-semi-bold.text-600.ms-1= config.deadline

      .d-flex.d-lg-block.d-xl-flex.justify-content-between.align-items-center.mt-3
        .avatar-group
          each member in config.assigness
            a.dropdown-toggle.dropdown-caret-none.d-inline-block(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false' data-bs-auto-close="outside")
              if member.avatar
                +Avatar({
                  size: 'm',
                  img: member.avatar,
                  round: 'circle',
                  imgClass:member.avatar==="team/avatar.webp" ? 'avatar-placeholder' : ''
              }).rounded-circle
              else if member.avatar === ''
                .avatar.avatar-m
                  .avatar-name.rounded-circle
                    span=member.name.charAt(0).toUpperCase()
            +AvatarDropdownMenu(member) 
          if config.more
            +Avatar({size: 'm', more: config.more, round: 'circle'}).rounded-circle
        .mt-lg-3.mt-xl-0 
          i.fa-solid.fa-list-check.me-1
          p.d-inline-block.fw-bold.mb-0=config.task
            span.fw-normal 	Task

