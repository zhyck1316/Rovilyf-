						th
						th
						th
					tr
						td.py-1
							.d-flex.align-items-center
								span.me-2.text-700(data-feather="dollar-sign")
								p.fw-semi-bold.fs--1.mb-0.text-700 Expected Revenue
						td.py-1.d-none.d-sm-block.pe-sm-2 :
						td.py-1
							p.ps-6.ps-sm-0.fw-semi-bold.fs--1.mb-0.mb-0.pb-3.pb-sm-0.text-1100 #{data.revenue}
					tr
						td.py-1
							.d-flex.align-items-center
								span.me-2.text-700(data-feather="user" style="width:16px; height:16px")
								p.fw-semi-bold.fs--1.mb-0.text-700 Company Name
						td.py-1.d-none.d-sm-block.pe-sm-2 :
						td.py-1
							p.ps-6.ps-sm-0.fw-semi-bold.fs--1.mb-0.mb-0.pb-3.pb-sm-0.text-1100.d-flex.align-items-center.gap-2 #{data.company}
