mixin DealsCol(data)
	.card.mb-3
		.card-body
			a.dropdown-indicator-icon.position-absolute.text-700(href=`#collapseWidthDeals-${data.id}` role="button" data-bs-toggle='collapse' aria-expanded='false' aria-controls=`collapseWidthDeals-${data.id}`)
				span.fa-solid.fa-angle-down
			.d-flex.align-items-center.justify-content-between.mb-3
				.d-flex
					span.me-2(data-feather="clock" style='stroke-width:2;')
					p.mb-0.fs--1.fw-semi-bold.text-700.date=data.date
						span.text-500=data.time

			.deals-items-head.d-flex.align-items-center.mb-2
				a.text-primary.fw-bold.line-clamp-1.me-3.mb-0.fs-1(href=`${CWD}${paths['crm-deal-details']}`)=data.title
				p.deals-category.fs--2.mb-0.mt-1.d-none
					span.me-1.text-500(data-feather="grid" style='stroke-width:2; height: 12px; width: 12px')
					| #{data.category}
				p.ms-auto.fs--1.text-1100.fw-semi-bold.mb-0.deals-revenue=data.revenue
			.deals-company-agent.d-flex.flex-between-center
				.d-flex.align-items-center
					span.uil.uil-user.me-2
					p.text-800.fw-bold.fs--1.mb-0=data.company
				.d-flex.align-items-center
					span.uil.uil-headphones.me-2
					p.text-800.fw-bold.fs--1.mb-0=data.agent

			.collapse(id=`collapseWidthDeals-${data.id}`)
				.d-flex.gap-2.mb-5
					span.badge.badge-phoenix(class=`badge-phoenix-${data.badge.variant}`)= data.badge.label
					span.badge.badge-phoenix(class=`badge-phoenix-${data.priority.variant}`)= data.priority.label
