mixin Board(config)
  a(href=`${CWD}${paths['app-kanban']}`).text-decoration-none
    .card.overflow-hidden.bg-transparent.h-100
      .position-relative
        if config.img 
          img(src=`${CWD}assets/img/kanban/${config.img}.png` style=`height: 128px;` alt='').w-100
        else if config.boardColor
          div(style=`height: 128px; background-color: ${config.boardColor}`)
        else 
          div(class=`${config.boardClass}` style='height: 128px')
        .avatar-group.position-absolute(style='bottom: 1rem; left: 1.5rem')
          each user in config.users
            +Avatar({size: 'm', img: user}).border.border-white.rounded-circle
      .card-body.d-flex.flex-column.justify-content-between
        div
          h3.text-900= config.title
          p.text-700.mb-4= config.category
        .d-flex.gap-4
          h5.text-900
            span.fa-solid.fa-list-check.text-700.me-1
            | #{config.check}
          h5.text-900
            span.fa-solid.fa-comment.text-700.me-1
            | #{config.comment}
          h5.text-900
            span.fa-solid.fa-calendar-xmark.text-700.me-1
            | #{config.xmark}

mixin BoardSlider(boards)
  .swiper-theme-container
    .swiper.swiper-container.theme-slider(data-swiper!={
      slidesPerView: 1,
      spaceBetween: 24,
      speed: 800,
      breakpoints: {
        576: {
          slidesPerView: 2,
        },
        1200: {
          slidesPerView: 3,
        },
        1540: {
          slidesPerView: 4,
        },
      },
    })
      .swiper-wrapper
        each board in boards
          .swiper-slide
            +Board(board)
        .swiper-slide
          a(href=`${CWD}${paths['create-kanban-board']}`).btn.btn-phoenix-primary.d-flex.flex-center.h-100.w-100.fs-1.fw-semi-bold.text-truncate
            span.fa-solid.fa-plus-circle.fs-0.me-2
            | Create New Board
    .swiper-nav
      .swiper-button-next
        span.fas.fa-chevron-right.nav-icon
      .swiper-button-prev
        span.fas.fa-chevron-left.nav-icon