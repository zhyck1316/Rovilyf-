extends ../../../layouts/LayoutTheme
include ../../../layouts/LayoutCardAuth

block wrapperContent
  +LayoutCardBasic({img:37})
    .auth-form-box
      .text-center.mb-7
        a(href=`${CWD}${paths['default-dashboard']}`).d-flex.flex-center.text-decoration-none.mb-4
          +Logo({text:false,width:58}).fw-bolder.fs-5.d-inline-block
        h4.text-1000 Reset new password
        p.text-700 Type your new password
      form.mt-5
        input#password.form-control.mb-2(type='password' placeholder='Type new password')
        input#confirmPassword.form-control.mb-4(type='password' placeholder='Cofirm new password')
        button.btn.btn-primary.w-100(type='submit') Set Password